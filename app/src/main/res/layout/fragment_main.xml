<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentMain">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/greeting_text"
        android:textSize="24sp"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/citiesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/citiesButtonText"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center|bottom" />

    <!-- Location -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/location"
        android:layout_gravity="top|left" />

    <TextView
        android:id="@+id/textViewChosenCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/citiesTextViewUnknownText"
        android:textSize="28sp"
        android:layout_marginLeft="50dp"
        android:layout_gravity="top|left" />

    <!-- Temperature -->
    <ImageView
        android:id="@+id/imageViewTemperature"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/temperature"
        android:layout_marginTop="40dp"
        android:layout_gravity="top|left" />

    <TextView
        android:id="@+id/textViewTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/temperatureTextViewUnknownText"
        android:textSize="28sp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="top|left" />

    <!-- Info -->
    <ImageView
        android:id="@+id/imageViewInfo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/info"
        android:layout_marginTop="80dp"
        android:layout_gravity="top|left" />

    <TextView
        android:id="@+id/textViewInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/infoTextViewUnknownText"
        android:textSize="28sp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="80dp"
        android:layout_gravity="top|left" />

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentCities">

    <ImageView
        android:id="@+id/imageViewMoscow"
        android:layout_width="208dp"
        android:layout_height="136dp"
        android:layout_gravity="top|left"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/moscow" />

    <ImageView
        android:id="@+id/imageViewPeterburg"
        android:layout_width="208dp"
        android:layout_height="136dp"
        android:layout_gravity="top|right"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/peterburg" />

    <ImageView
        android:id="@+id/imageViewVolgograd"
        android:layout_width="208dp"
        android:layout_height="136dp"
        android:layout_gravity="center|right"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/volgograd"
        />

    <ImageView
        android:id="@+id/imageViewKazan"
        android:layout_width="208dp"
        android:layout_height="136dp"
        android:layout_gravity="center|left"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/kazan" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonCitiesClose"
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="16dp"
        android:text="@string/citiesButtonCloseText" />

</FrameLayout>